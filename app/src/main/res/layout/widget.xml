<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="16dp"
    android:layout_height="match_parent"
    android:background="#55000000">

    <TextView
        android:id="@+id/textView_header_widget"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="BukaAnalytics"
        android:textStyle="bold"/>
    
    <LinearLayout
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/textView_content_unread_msg"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="Unread Message" />

        <TextView
            android:id="@+id/textView_content_unread_msg2"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="Unread Message" />

        <TextView
            android:id="@+id/textView_content_unread_msg3"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="Product Complaint" />

        <TextView
            android:id="@+id/textView_content_unread_msg4"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:text="Nego" />
    </LinearLayout>
</LinearLayout>